<img class ="page_first" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0.9) 0%, rgba(35,35,35,0.8) 0%), url('https://i.ibb.co/hdNHD9y/perry-grone-732606-unsplash.jpg');" >

<div class = "container_first"><img class="logo" src="https://i.ibb.co/wWRMJcj/logo.png"><h2>Sport+</h2></div>
<div>
  <div class="fb-login-button"><p>Continue with Facebook</p></div>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">

      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" },
                  placeholder: "example@gmail.com"%>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" },
                  placeholder: "••••••" %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="flex">
      <%= f.button :submit, "SIGN IN", class: " active sign-in btn " %>
    </div>
  <% end %>
  <div class= "container_last"><%=render "devise/shared/links" %></div>
</div>
